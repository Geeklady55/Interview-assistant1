{
  "name": "stealth-interview",
  "version": "1.2.0",
  "description": "StealthInterview.ai - Your invisible AI co-pilot for technical interviews",
  "main": "main.js",
  "author": {
    "name": "StealthInterview.ai",
    "email": "support@stealthinterview.ai"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stealthinterview/desktop"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "release": "electron-builder --publish always"
  },
  "build": {
    "appId": "com.stealthinterview.app",
    "productName": "StealthInterview",
    "copyright": "Copyright Â© 2026 StealthInterview.ai",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "stealthinterview",
      "repo": "desktop",
      "releaseType": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "StealthInterview-${version}-Windows-Setup.${ext}",
      "publisherName": "StealthInterview.ai",
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "artifactName": "StealthInterview-${version}-Mac-${arch}.${ext}",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "notarize": {
        "teamId": "${env.APPLE_TEAM_ID}"
      }
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png",
      "artifactName": "StealthInterview-${version}-Linux.${ext}",
      "category": "Office",
      "maintainer": "support@stealthinterview.ai"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "StealthInterview"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    }
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-notarize": "^1.2.2"
  }
}
